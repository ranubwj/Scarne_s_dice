<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GhostActivity"

    android:id="@+id/ghost">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GET READY!!!!"
        android:id="@+id/gameStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:id="@+id/ghostText"
        android:layout_below="@+id/gameStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="RESTART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="15dp"
        android:id="@+id/restart"
        android:onClick="restart"
        android:background="@color/colorAccent"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/chall"
        android:layout_alignBottom="@+id/chall"
        android:layout_toEndOf="@+id/chall" />

    <Button
        android:text="CHALLENGE"
        android:onClick="chall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="20dp"
        android:textSize="15dp"
        android:id="@+id/chall"
        android:layout_marginStart="39dp"
        android:layout_marginTop="150dp"/>





</RelativeLayout>
